#include <iostream>
using namespace std;
// Problem at https://cses.fi/problemset/task/1068/
int main() {
  long int n; 
  //cout<< "Enter start value :";
  cin >> n;
  cout << n;
  while(n>1){
    if(n%2==0) {
      n = n/2;
    } else {
        n = 3*n+1;
    }
    cout<<" "<<n;
  }
  return 0;
}
